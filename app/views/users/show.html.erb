<%= render 'books/list', user: @user, book: @book %>
<div class="col-md-8 offset-md-1">
 <h2>Books users show</h2>
  <table class="table table-striped">
   <thead>
    <tr>
     <th class="header1"></th>
     <th class="header2">Title</th>
     <th class="header3">Opinion</th>
    </tr>
   </thead>
   <tbody>
    <% @books.each do |book| %>
     <tr>
      <td>
       <%= link_to user_path(@user) do %>
         <%= image_tag @user.get_profile_image(100,100) %></td>
       <% end %>
      <td>
       <%= link_to book_path(book.id) do %>
        <%=book.title%>
       <% end %>
      </td>
      <td><%= book.body %></td>
     </tr>
    <% end %>
   </tbody>
  </table>
</div>
