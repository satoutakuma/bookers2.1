<h1>Books users show</h1>
 <table class="teble">
  <thead>
   <tr>
    <th class="header1"></th>
    <th class="header2">Title</th>
    <th class="header3">Opinion</th>
   </tr>
  </thead>
  <tbody>
   <% @books.each do |book| %>
    <tr>
     <td><%= image_tag @user.get_profile_image(100,100) %></td>
     <td>
      <%= link_to book_path(book.id) do %>
       <%=book.title%>
      <% end %>
     </td>
     <td><%= book.body %></td>
    </tr>
   <% end %>
  </tbody>
 </table>
