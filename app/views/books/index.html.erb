<h1>User info</h1>
 <table class="teble">
	 <thead>
		 <tr>
		  <th class="header1"><%= image_tag @user.get_profile_image(100,100) %></th>
			 <th class="header2"></th>
		 </tr>
	 </thead>
   <tbody>
 	   <tr>
 	    <th>name</th>
 	    <th><%= @user.name %></th>
 	   </tr>
 	   <tr>
 	   	<th>introduction</th>
 	    <th><%= @user.introduction %></th>
 	   </tr>
  </tbody>
</table>
<p>
 <% if @user == current_user %>
  <%= link_to "edit", edit_user_path(@user.id) %>
 <% end %>
</p>
 

 
<h1>New book</h1>
 <%= form_with model: @book do |f| %>
  <h4>Title</h4>
   <%= f.text_field :title %>
  <h4>Opinion</h4>
   <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
 <% end %>

<h1>Books books index</h1>
 <table class="teble">
	 <thead>
		 <tr>
		  <th class="header1"></th>
			 <th class="header2">Title</th>
			 <th class="header3">Opinion</th>
		 </tr>
	 </thead>
 	 <tbody>
		  <% @books.each do |book| %>
		  <tr>
		   <td>
		    <%= image_tag book.user.get_profile_image(100,100) %>
		   </td>
		   <td>
			<%= link_to book_path(book.id) do %>
			 <%= book.title %>
			<% end %>
			 </td>
			<td><%= book.body %></td>
		  </tr>
        <% end %>
	  </tbody>
 </table>
